<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JugadosActivity">

    <TextView
        android:id="@+id/partidosJugados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="60dp"
        android:text="Partidos Jugados"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/empates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="28dp"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toEndOf="@+id/tituloEmpates"
        app:layout_constraintTop_toBottomOf="@+id/victorias" />

    <TextView
        android:id="@+id/victorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="76dp"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toEndOf="@+id/tituloVictorias"
        app:layout_constraintTop_toBottomOf="@+id/partidosJugados" />

    <TextView
        android:id="@+id/derrotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="28dp"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toEndOf="@+id/tituloDerrotas"
        app:layout_constraintTop_toBottomOf="@+id/empates" />

    <TextView
        android:id="@+id/tituloVictorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Victorias"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/partidosJugados"
        tools:layout_editor_absoluteX="81dp" />

    <TextView
        android:id="@+id/tituloEmpates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Empates"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tituloVictorias"
        tools:layout_editor_absoluteX="81dp" />

    <TextView
        android:id="@+id/tituloDerrotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Derrotas"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tituloEmpates"
        tools:layout_editor_absoluteX="80dp" />
</androidx.constraintlayout.widget.ConstraintLayout>